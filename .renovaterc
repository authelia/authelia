{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(build)",
    ":separatePatchReleases",
    "workarounds:doNotUpgradeFromAlpineStableToEdge"
  ],
  "ignorePaths": [
    "docs/**"
  ],
  "ignorePresets": [
    ":prHourlyLimit2",
    ":semanticPrefixFixDepsChoreOthers",
    "workarounds:all"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "gomod",
    "kubernetes",
    "npm"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kube/.+\\.yml$/"
    ]
  },
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": "traefik",
      "matchFileNames": [
        "internal/suites/example/compose/traefik/compose.v2.yml"
      ],
      "allowedVersions": "<3.0.0"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "docker"
      ]
    },
    {
      "matchDatasources": [
        "go"
      ],
      "addLabels": [
        "go"
      ]
    },
    {
      "matchDatasources": [
        "kubernetes"
      ],
      "addLabels": [
        "kubernetes"
      ]
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "addLabels": [
        "javascript"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
