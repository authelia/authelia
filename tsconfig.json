{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/types/*",
                "./node_modules/@types/*"
            ]
        }
    },
    "includes": [
        "src/**/*",
        "test/**/*"
    ]
}
