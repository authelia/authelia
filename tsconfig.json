{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/@types/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
