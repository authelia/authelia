FROM golang:1.26.0-alpine@sha256:d4c4845f5d60c6a974c6000ce58ae079328d03ab7f721a0734277e69905473e5

ARG USER_ID
ARG GROUP_ID

RUN addgroup --gid ${GROUP_ID} dev && \
    adduser --uid ${USER_ID} -G dev -D dev && \
    apk --no-cache add gcc git musl-dev

RUN \
	mkdir -p /config && chown dev:dev /config

USER dev

ENV PATH="/app:${PATH}" \
	X_AUTHELIA_CONFIG="/config/configuration.yml"

VOLUME /config

EXPOSE 9091
