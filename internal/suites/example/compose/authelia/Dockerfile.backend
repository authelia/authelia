FROM golang:1.25.7-alpine@sha256:81d49e1de26fa223b9ae0b4d5a4065ff8176a7d80aa5ef0bd9f2eee430afe4d7

ARG USER_ID
ARG GROUP_ID

RUN addgroup --gid ${GROUP_ID} dev && \
    adduser --uid ${USER_ID} -G dev -D dev && \
    apk --no-cache add gcc git musl-dev

RUN \
	mkdir -p /config && chown dev:dev /config

USER dev

ENV PATH="/app:${PATH}" \
	X_AUTHELIA_CONFIG="/config/configuration.yml"

VOLUME /config

EXPOSE 9091
